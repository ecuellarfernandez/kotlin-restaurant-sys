<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvReservationId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reservation ID"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvReservationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        app:layout_constraintTop_toBottomOf="@id/tvReservationId"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvReservationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        app:layout_constraintTop_toBottomOf="@id/tvReservationDate"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvReservationPeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="People"
        app:layout_constraintTop_toBottomOf="@id/tvReservationTime"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvReservationFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food"
        app:layout_constraintTop_toBottomOf="@id/tvReservationPeople"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
